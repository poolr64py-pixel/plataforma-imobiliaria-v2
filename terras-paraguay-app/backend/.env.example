# Configuração do servidor
NODE_ENV=development
PORT=3001

# Banco de dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whitelabel_master
DB_USER=postgres
DB_PASSWORD=password

# Redis (cache e sessões)
REDIS_URL=redis://localhost:6379

# Segurança
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# CORS - Origens permitidas (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Upload de arquivos
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Cloudinary (opcional - para hosting de imagens)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# SMS Provider (opcional)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# APIs externas
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Stripe (pagamentos)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Monitoramento
SENTRY_DSN=your_sentry_dsn

# Domínio principal da plataforma
PLATFORM_DOMAIN=localhost:3001
PLATFORM_URL=http://localhost:3001

# Admin dashboard
ADMIN_EMAIL=admin@whitelabel.com
ADMIN_PASSWORD=admin123

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100